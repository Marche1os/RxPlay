<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <GridLayout
            android:id="@+id/operators_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/button_first"
                android:layout_column="3"
                android:text="Очистить текст" />

            <Button
                android:id="@+id/button_navigate"
                android:layout_column="1"
                android:text="Операторы Subjects" />

            <Button
                android:id="@+id/toErrorsPageBtn"
                android:layout_column="1"
                android:text="Обработка ошибок" />

            <Button
                android:id="@+id/toMergeOperators"
                android:layout_column="1"
                android:text="Операторы объединения" />

        </GridLayout>

        <TextView
            android:id="@+id/textview_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/operators_layout"
            tools:text="Базовые операторы" />

        <TableLayout
            android:id="@+id/buttonsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_first">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cacheBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="cache" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/refCountBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="refCount" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/replayBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="replay" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/twoObservablesBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="twoColdObservables" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/twoObservablesHotBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="twoHotObservables" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/takeUntilBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="takeUntil" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/zipBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="zip" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mergeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="merge" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bufferBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="buffer" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mapBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="map" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fromCallableBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="fromCallable" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/intervalBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="interval" />

        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>